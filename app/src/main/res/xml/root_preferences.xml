<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Configuración">

        <SwitchPreferenceCompat
            android:id="@+id/spc_units"
            app:key="units"
            app:summaryOff="Farenheit"
            app:summaryOn="Celsius"
            app:title="Unidad de temperatura" />

        <SwitchPreferenceCompat
            app:key="language"
            app:summaryOn="Español"
            app:summaryOff="English"
            app:title="Idioma"/>

    </PreferenceCategory>
</PreferenceScreen>